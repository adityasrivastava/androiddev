<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
       />

        <android.support.design.widget.FloatingActionButton android:id="@+id/share_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@android:drawable/ic_menu_share"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="6dp"
            android:layout_alignBottom="@+id/content_image"
            android:layout_toStartOf="@+id/browser_button" />

        <android.support.design.widget.FloatingActionButton android:id="@+id/browser_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/browsericon"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="6dp"
            android:layout_alignBottom="@+id/content_image"
            android:layout_alignParentEnd="true" />



        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jonh Doe"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_below="@+id/content_image"
            />


        <TextView
            android:id="@+id/post_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jonh Doe"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_below="@+id/post_title"
          />


    </RelativeLayout>

</ScrollView>